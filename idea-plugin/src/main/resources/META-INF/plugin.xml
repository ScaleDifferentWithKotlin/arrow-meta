<idea-plugin>
    <id>arrow-plugin</id>
    <name>Arrow</name>

    <vendor email="hello@47deg.com" url="https://arrow-kt.io/">Arrow</vendor>

    <description><![CDATA[
    The Arrow Intellij IDEA plugin.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <depends>com.intellij.gradle</depends>
    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.kotlin</depends>

    <project-components>
        <component>
            <implementation-class>arrow.meta.ide.MetaPluginRegistrarComponent</implementation-class>
        </component>
        <component>
            <implementation-class>arrow.meta.ide.phases.resolve.FragmentProviderComponent</implementation-class>
        </component>
        <component>
            <implementation-class>arrow.meta.ide.phases.resolve.proofs.MetaKotlinCacheService</implementation-class>
        </component>
        <component>
            <implementation-class>arrow.meta.ide.phases.resolve.proofs.MetaImportInsertHelper</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <kotlinIndicesHelperExtension implementation="arrow.meta.ide.phases.resolve.proofs.ProofsKotlinIndicesHelperExtension" />
        <gradleProjectImportHandler implementation="arrow.meta.ide.gradle.ArrowGradleImportHandler"/>
        <packageFragmentProviderExtension implementation="arrow.meta.ide.phases.resolve.MetaSyntheticPackageFragmentProvider"/>
        <syntheticResolveExtension implementation="arrow.meta.ide.phases.resolve.proofs.ProofsSyntheticResolver" />
        <diagnosticSuppressor implementation="arrow.meta.ide.phases.resolve.proofs.ProofsDiagnosticsSuppressor" />
        <syntheticScopeProviderExtension implementation="arrow.meta.ide.phases.resolve.proofs.MetaSyntheticScope" />
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
<!--        <projectService serviceInterface="org.jetbrains.kotlin.idea.util.ImportInsertHelper"-->
<!--                        serviceImplementation="arrow.meta.ide.phases.resolve.proofs.MetaImportInsertHelper"/>-->
<!--        <projectService serviceInterface="org.jetbrains.kotlin.resolve.CodeAnalyzerInitializer"-->
<!--                        serviceImplementation="arrow.meta.ide.phases.resolve.proofs.MetaCodeAnalyzerInitializer"/>-->
    </extensions>

</idea-plugin>